    "\n",
    "if len(original) > 0 and original.isalpha():\n",
    "  word = original.lower()\n",
    "  first = word[0]\n",
    "  new_word = word + first + pyg\n",
    "  new_word = new_word[1:len(new_word)]\n",
    "else:\n",
    "    print('empty')"
